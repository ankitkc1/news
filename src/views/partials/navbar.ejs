<header class="topbar">
  <div class="shell topbar-inner">
    <a href="/" class="logo"><%= appName %></a>

    <nav class="navlinks">
      <a href="/trending">Trending</a>
      <a href="/categories">Categories</a>
      <% (navCategories || []).forEach(c => { %>
        <a class="chip" href="/category/<%= encodeURIComponent(c) %>"><%= c %></a>
      <% }) %>
    </nav>

    <div class="authbox">
      <% if (isAdmin) { %>
        <a class="btn ghost" href="/admin">Admin</a>
      <% } %>

      <% if (isLoggedIn) { %>
        <span class="muted">Hi, <%= currentUser.name %></span>
        <form action="/auth/logout" method="POST">
          <button class="btn" type="submit">Logout</button>
        </form>
      <% } else { %>
        <a class="btn ghost" href="/auth/login">Login</a>
        <a class="btn" href="/auth/register">Create account</a>
      <% } %>
    </div>
  </div>
</header>
